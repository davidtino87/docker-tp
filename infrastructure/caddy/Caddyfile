{
    auto_https off
}

:80 {
    handle /api/* {
        uri strip_prefix /api
        reverse_proxy backend:8000
    }

    handle /docs* {
        reverse_proxy backend:8000
    }

    handle_path /db* {
        reverse_proxy adminer:8080
    }

    handle {
        reverse_proxy frontend:{$FRONTEND_TARGET_PORT}
    }
}
